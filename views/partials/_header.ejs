<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (user) { %>
        <div class="login-container justify-content-right navbar-right">
          <form class="form-inline" action="/logout" method="POST">
            <div class="form-group mb-2">
              <a class="nav-item nav-link btn disabled" href="#" style="color: yellow;">
                <%= user.email %>
              </a>
              <button type="submit" class="btn btn-outline-dark btn-lg">Logout</button>
            </div>
          </form>
        </div>
        <% }else { %>
          <div class="login-container justify-content-right navbar-right">
            <a href="/login" class="btn btn-outline-dark btn-lg" role="button">Login</a>
            <a href="/register" class="btn btn-outline-dark btn-lg" role="button">Register</a>
          </div>
          <% } %>

    </div>
  </nav>
</header>